    <body>

        <% include partials/menuBar %>
        <% include partials/flash %>

        <div class="main-user-info">

            <div class="user-info-div" style="background: #f5f5f5; color: black;">
                <li><h2>My Profile</h2></li>
                <li><img src="data:image/png;base64,<%= currentPicture %>" style="  width: 70px;
                  height: 70px;
                  border-radius: 50%;"></li>
                <li><h3><%= currentUsername %></h3></li>
                <li>
                  <p>
                      Name: <%= currentFirstname %> <%= currentLastname %>
                      <br>
                      Email: <%= currentEmail %>
                      <br>
                      TYPE: <%= currentCustomerType %>
                      <br>
                      ID: <%= currentID %>
                  </p>
                </li>
                <li><a href="/edituserinfo" class="new-btn black">Edit profile</a></li>
            </div>

            <div class="user-info-div" style="background: #f5f5f5; color: black;">
                <h2>My Car</h2>
                <!-- <a href="/carregister"><img src="/img/edit.png" width="10px" height="10px" alt=""></a> -->
                <!-- <div class="car-div">
                  <li><img src="img/car1.png" width="50%"></li>
                  <li style="padding-bottom: 20px;">Plate number :<%=currentPlateNumber[0]%><br>Brand :<%=currentBrand[0]%><br>Model :<%=currentModel[0]%><br>Color :<%=currentColor[0]%></li>
                  <li><a href="/" class="new-btn black">Delete car</a></li>
                </div>

                <div class="car-div">
                  <li><img src="img/car1.png" width="50%"></li>
                  <li style="padding-bottom: 20px;">Plate number :<%=currentPlateNumber[1]%><br>Brand :<%=currentBrand[1]%><br>Model :<%=currentModel[1]%><br>Color :<%=currentColor[1]%></li>
                  <li><a href="/" class="new-btn black">Delete Car</a></li>
                </div> -->
                <% for(i = 0; i < currentPlateNumber.length; i++){ %>
                  <div class="car-div">
                    <li><img src="data:image/png;base64,<%= currentCarPicture[i] %>" width="50%"></li>
                    <li style="padding-bottom: 20px;">Plate Number : <%=currentPlateNumber[i]%><br>
                                                      Brand : <%=currentBrand[i]%><br>
                                                      Model : <%=currentModel[i]%><br>
                                                      Color : <%=currentColor[i]%></li>
                  <form action="/deletecar/<%= i %>" class="deletecar" enctype="multipart/form-data" method="POST">
                    <li><button type="submit" class="new-btn black">Delete Car</button></li>
                  </form>
                  <script>
                  $('form.deletecar').submit(function(event){
                          var r = confirm("Delete this car?");
                          if (r == true) {
                            return;
                          } else {
                            return false;
                        }
                        });
                  </script>
                  </div>
                <% } %>






                  <a href="/carregister" class="new-btn black">Add Car</a>

            </div>

            <div class="user-info-div" style="background: #f5f5f5; color: black;">
                <!-- <ul class="list-group list-group-flush">
                    <li class="list-group-item">12/09/2019 Arts 2 hrs 40thb</li>
                    <li class="list-group-item">11/09/2019 Arts 3 hrs 50thb</li>
                    <li class="list-group-item">10/09/2019 Arts 4 hrs 60thb</li>
                </ul> -->
                <li><h2>History</h2></li>
                <% for(i = 0; i < totalTransaction.length; i++){ %>
                  <div class="history-div">
                  <form action="/receipt/<%= i %>" class="receipt" enctype="multipart/form-data" method="POST">
                    <li><button type="submit" class="new-btn black">Date: <%= receiptDate[i] %> Building: <%= receiptBuilding[i] %> Duration: <%= receiptTotaltime[i] %> Minutes Price: <%= receiptFee[i] %> Baht</button></li>
                  </form>
                  </div>
                <% } %>
            </div>

        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    </body>
</html>
