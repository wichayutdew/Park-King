    </head>
    <body>

      <% include partials/menuBar %>

      <div id="main">

            <form action="/register"  method="POST">
                    <div class="container pt-2">



                      <div class="card mt-2 mx-1">
                        <h7 class="card-header">Select your Car</h7>
                        <div class="card-body">
                          <div class="carSelect">
                            <div class="btn-group carBtnGroup d-flex justify-content-around" data-toggle="buttons">
                              <label class="btn carChoice">
                                <div class="method" style="background-image: url(img/car1.png)">9999</div>
                                <input type="radio" name="options">
                              </label>
                              <label class="btn carChoice">
                                <div class="method" style="background-image: url(img/car1.png)">8888</div>
                                <input type="radio" name="options">
                              </label>
                            </div>
                          </div>
                        </div>
                      </div>


                      <div class="card mt-2 mx-1">
                        <h7 class="card-header">Select the Building</h7>
                        <div class="card-body">
                          <div class="buildingSelect">
                            <div class="btn-group buildingBtnGroup d-flex justify-content-around " data-toggle="buttons">
                              <label class="btn buildingChoice">
                                <div class="building arts"></div>
                                <input type="radio" name="options">
                              </label>
                              <label class="btn buildingChoice">
                                <div class="building poli"></div>
                                <input type="radio" name="options">
                              </label>
                            </div>
                          </div>
                        </div>
                      </div>



                      <!-- <a href="/showqr" class="btn btn-dark btn-lg btn-block mt-2 mx-1" id="submitBtn">Submit</a> -->
                      <div class="container-login100-form-btn pt-2">
                        <button type="submit" class="login100-form-btn" style="background: grey;">
                          Submit
                        </button>
                      </div>
                      <div class="row">
                      <small class="text-muted mx-1 mt-2">Once submitted, you will have 30 minutes to arrive at the building before your reservation expires</small>
                    </div>
                    </div>
                  </form>

    </div>






    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
